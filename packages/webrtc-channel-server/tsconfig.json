{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./build",
    "incremental": true,
    "lib": [
      "esnext.asynciterable"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
